<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vosptech.aura.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/horizontal_layout"
        android:layout_alignParentTop="true"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="?attr/colorSecondary"
            android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center"
               android:background="?attr/colorPrimary">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="50dp"
                   android:layout_weight="1"
                   android:orientation="vertical">
            <!-- text view for displaying question-->
            <TextView
                android:id="@+id/Aura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Aura"
                android:textColor="?attr/color"
                android:textSize="25sp" />

            <!-- text view for displaying response-->
            <TextView
                android:id="@+id/idDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Feel the Aura"
                android:textColor="?attr/color"
                android:textSize="15sp" />
               </LinearLayout>
               <ImageView
                   android:id="@+id/menuButton"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="10dp"
                   android:src="@drawable/round_menu_24"/>
           </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                app:reverseLayout="true"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button"
                android:backgroundTint="@color/btn_color"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/continue_the_above_response" />


        </LinearLayout>

    </LinearLayout>
    <!-- text field for asking question-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/horizontal_layout"
        android:background="?attr/colorPrimary"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/idEdtQuery"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="9dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            app:hintTextColor="@color/white"
            android:hint="Enter your query"
            android:imeOptions="actionSend"
            android:inputType="textEmailAddress"
            android:textColor="?attr/color"
            android:textSize="14sp" />



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:id="@+id/sendBtn"
            android:padding="3dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/round_send_24"/>

    </LinearLayout>
</RelativeLayout>